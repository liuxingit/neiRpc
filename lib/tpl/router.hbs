import { Application } from 'egg';

export default (app: Application) => {
    const { controller, router } = app;
    {{#each item}}
    {{#each this.paths}}
    /**
    * name：{{name}}
    * desc：{{description}}
    * 接口名：/api/{{sClassName}}/{{path}}
    * 负责人：{{realname}}
    */
    
    {{#if method}}
    router.{{method}}('/api/{{sClassName}}/{{path}}', controller.{{sClassName}}.{{path}});
    {{else}}
    router.post('/api/{{sClassName}}/{{path}}', controller.{{sClassName}}.{{path}});
    {{/if}}

    {{/each}}
    {{/each}}
}